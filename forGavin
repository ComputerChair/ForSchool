import java.util.Scanner;
public class Names
{
    Scanner in = new Scanner(System.in);
    private String[] nary;
    private int size;
    private int index;
    private int nextLoc;
    public Names(){
        size = 20;
        index = 0;
        nary = new String[size];
    }
    public void addName(){
        String name = in.nextLine();
        if(index < size){
            nary[index] = name;
            index = index + 1;
        }
        else{
            System.out.println("The array is full, you are unable to add any more names");
        }
    }
    public void displayNames(){
        for(int x = 0; x < index; x++){
            System.out.println(nary[x]);
        }
    }
    public String searchForName(){
        String target = in.nextLine();
        String aName = "";
        for (int x = 0; x < index; x++){
            if(nary[x].equals(target)){
                aName = nary[x];
            }
        }
        if(aName.equals(target)){
            System.out.println("Your name is in the array");
        }
        else{
            System.out.println("Your name is not in the array");
        }
        return aName;
    }
    public void bubbleSort(){
        String temp;
        for(int outer = index - 1; outer > 0; outer--){
            for(int i = 0; i < outer; i++){
                if(nary[i].compareTo(nary[i+1]) > 0){
                    temp = nary[i];
                    nary[i] = nary[i+1];
                    nary[i+1] = temp;
                }
            }
        }
    }
    public void binarySearch(){
        System.out.println("Enter name you would like tp search for : ");
        String target = in.nextLine();
        int left = 0;
        int right = index - 1;
        int middle;
        int loc = -1;
        
        while(loc == -1 && left <= right){
            middle = (right + left) / 2;
            if(nary[middle].equals(target)){
                loc = middle;
                System.out.println("Your name is at position " + (loc + 1));
            }
            else if(nary[middle].compareTo(target) < 0){
                left = middle + 1;
            }
            else if(nary[middle].compareTo(target) > 0){
                right = middle - 1;
            }
       
        }
        if(loc == -1){
            System.out.println("Your name was not found in the array");
        }
    }
}
